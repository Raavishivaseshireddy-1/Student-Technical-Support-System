<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StudentLoginServlet</servlet-name>
        <servlet-class>StudentLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewExperienceServlet</servlet-name>
        <servlet-class>ViewExperienceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCompanyServlet</servlet-name>
        <servlet-class>AddCompanyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostExperienceServlet</servlet-name>
        <servlet-class>PostExperienceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostQueryServlet</servlet-name>
        <servlet-class>PostQueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQueryServlet</servlet-name>
        <servlet-class>ViewQueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostReply</servlet-name>
        <servlet-class>PostReply</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentLoginServlet</servlet-name>
        <url-pattern>/StudentLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/EmployeeLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewExperienceServlet</servlet-name>
        <url-pattern>/ViewExperienceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCompanyServlet</servlet-name>
        <url-pattern>/AddCompanyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostExperienceServlet</servlet-name>
        <url-pattern>/PostExperienceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostQueryServlet</servlet-name>
        <url-pattern>/PostQueryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQueryServlet</servlet-name>
        <url-pattern>/ViewQueryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostReply</servlet-name>
        <url-pattern>/PostReply</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
